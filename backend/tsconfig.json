{
  "compilerOptions": {
    "types": ["node"],
    "target": "es2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "types/**/*",
    "declarations.d.ts"
  ],
  "exclude":[
    "./node_modules"
  ]
}
